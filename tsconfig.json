{
  "compilerOptions": {
    "rootDir": "./src",
    "strict": true,
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["dom", "es6", "es2016"],
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types/defaults.tsx",
    "src/components/sendSmsModal",
    "src/pages/documents/pages.jsxver/pages.jsx",
    "src/.queries.ts",
    "src/atoms/toggleNoti",
    "src/components/cardResistModal",
    "src/lib/wave/wave.js",
    "src/utils/jsdrag.js",
    "src/pages/bookingHost/resvList/Excel.jsx",
    "src/pages/outPages/print/CreditCardReceipt.tsx",
    "src/pages/outPages/print/CreditCardReceipt.js",
    "src/setup.js",
    "src/components/cardModal",
    "src/components/bookingModal/stories/bookingModal.storiestsx"
  ],
  "exclude": ["node_modules", "src/atoms/**/*", "src/**/*.stories.tsx"]
}
