{
  "compilerOptions": {
    "rootDir": "./src",
    "strict": true,
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es6",
      "es2016"
    ],
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx", "src/pages/documents/show/ShowComponents.jsx"
  ]
}